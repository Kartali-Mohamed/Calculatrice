<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4">


        // row 1
        <Button
            android:id="@+id/buClearID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="C"
            android:textSize="30sp"
            android:textColor="@color/orange"
            android:background="@color/black"
            android:layout_row="0"
            android:layout_column="0"
            android:fontFamily="@font/g_light"/>

        <Button
            android:id="@+id/buBackID"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:background="@color/black"
            android:drawableTop="@drawable/ic_baseline_backspace_24"
            android:fontFamily="@font/g_light"
            android:paddingTop="38dp" />

        <Button
            android:id="@+id/buModID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="%"
            android:textSize="30sp"
            android:textColor="@color/orange"
            android:background="@color/black"
            android:layout_row="0"
            android:layout_column="2"
            android:fontFamily="@font/g_light"/>

        <Button
            android:id="@+id/buDivID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="รท"
            android:textSize="30sp"
            android:textColor="@color/orange"
            android:background="@color/black"
            android:layout_row="0"
            android:layout_column="3"
            android:fontFamily="@font/g_light"/>


        // row 2
        <Button
            android:id="@+id/bu7ID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="7"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="1"
            android:layout_column="0"
            android:fontFamily="@font/g_light"/>

        <Button
            android:id="@+id/bu8ID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="8"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="1"
            android:layout_column="1"
            android:fontFamily="@font/g_light"/>

        <Button
            android:id="@+id/bu9ID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="9"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="1"
            android:layout_column="2"
            android:fontFamily="@font/g_light"/>

        <Button
            android:id="@+id/buMulID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="ร"
            android:textSize="30sp"
            android:textColor="@color/orange"
            android:background="@color/black"
            android:layout_row="1"
            android:layout_column="3"
            android:fontFamily="@font/g_light"/>


        // row 3
        <Button
            android:id="@+id/bu4ID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="4"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="2"
            android:layout_column="0"
            android:fontFamily="@font/g_light"/>

        <Button
            android:id="@+id/bu5ID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="5"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="2"
            android:layout_column="1"
            android:fontFamily="@font/g_light"/>

        <Button
            android:id="@+id/bu6ID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="6"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="2"
            android:layout_column="2"
            android:fontFamily="@font/g_light"/>

        <Button
            android:id="@+id/buSousID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="-"
            android:textSize="30sp"
            android:textColor="@color/orange"
            android:background="@color/black"
            android:layout_row="2"
            android:layout_column="3"
            android:fontFamily="@font/g_light"/>


        // row 4
        <Button
            android:id="@+id/bu1ID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="1"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="3"
            android:layout_column="0"
            android:fontFamily="@font/g_light"/>

        <Button
            android:id="@+id/bu2ID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="2"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="3"
            android:layout_column="1"
            android:fontFamily="@font/g_light"/>

        <Button
            android:id="@+id/bu3ID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="3"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="3"
            android:layout_column="2"
            android:fontFamily="@font/g_light"/>

        <Button
            android:id="@+id/buSubID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="+"
            android:textSize="30sp"
            android:textColor="@color/orange"
            android:background="@color/black"
            android:layout_row="3"
            android:layout_column="3"
            android:fontFamily="@font/g_light"/>



        // row 5
        <Button
            android:id="@+id/buParID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="( )"
            android:textSize="30sp"
            android:textColor="@color/orange"
            android:background="@color/black"
            android:layout_row="4"
            android:layout_column="0"
            android:fontFamily="@font/g_light"/>


        <Button
            android:id="@+id/bu0ID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="0"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="4"
            android:layout_column="1"
            android:fontFamily="@font/g_light"/>

        <Button
            android:id="@+id/buPointID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="."
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="4"
            android:layout_column="2"
            android:fontFamily="@font/g_light"/>

        <Button
            android:id="@+id/buEqualID"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="="
            android:textSize="33sp"
            android:textColor="@color/white"
            android:background="@drawable/stylebutton"
            android:layout_row="4"
            android:layout_column="3"
            android:fontFamily="@font/g_light"/>

    </GridLayout>
</RelativeLayout>